{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ post.title }}</h1>
        <small>{{ post.publishedAt|date("d/m/Y") }}</small>
        <p>{{ post.content }}</p>
    <ul>
    {% for comment in post.comments %}
        <li>{{ comment.author }} : {{ comment.content }}</li>
    {% endfor %}
    </ul>
{% endblock %}